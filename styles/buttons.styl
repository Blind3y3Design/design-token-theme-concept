.nebula-button {
    background: $button-background;
    border: $button-border;
    border-radius: $button-border-radius;
    color: $button-color;
    font-family: $button-font-family;
    font-size: $button-font-size;
    font-weight: $button-font-weight;
    letter-spacing: $button-letter-spacing;
    padding: $button-padding;
    text-transform: $button-text-transform;
    transition: all .25s ease-in-out;

    &:hover,
    &:focus {
        background: $button-background--hover;
        color: $button-color--hover;
    }

    &--small {
        padding: $button-padding--small;
    }
    
    &--large {
        padding: $button-padding--large;
    }

    &--ghost {
        background: $button--ghost-background;
        border: $button--ghost-border;
        color: $button--ghost-color;

        &:hover,
        &:focus {
            background: $button--ghost-background--hover;
            color: $button--ghost-color--hover;
        }
    }

    &--flat {
        background: $button--flat-background;
        color: $button--flat-color;

        &:hover,
        &:focus {
            background: $button--flat-background--hover;
            color: $button--flat-color--hover;
        }
    }
}